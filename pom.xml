  <developers>
    <developer>
      <id>kohsuke</id>
      <name>Kohsuke Kawaguchi</name>
      <email>kk@kohsuke.org</email>
    </developer>
    <developer>
      <id>bitwiseman</id>
      <name>Liam Newman</name>
      <email>bitwiseman@gmail.com</email>
